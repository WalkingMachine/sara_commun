<launch>

  <include file="$(find sara_launch)/people_launch/wm_face_detector.launch" />
  <include file="$(find sara_launch)/people_launch/wm_leg_detector_no_cob.launch" />
  <include file="$(find wm_2dnav/launch/move_base.launch" />

	<node name="wm_people_follower_node" pkg="wm_people_follower" type="wm_people_follower_node" output="screen">
		<param name="maximum_locking_distance" value="1.5" />
		<param name="locking_time_out" value="10.0" />
		<param name="follow_distance" value="1.0" />
		<param name="search_distance" value="0.4" />
		<param name="minimum_measurement_reliability" value="0.7" />
		<param name="action_client_period" value="4.0" />
	</node>

</launch>
