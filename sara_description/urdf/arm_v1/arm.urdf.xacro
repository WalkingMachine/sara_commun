<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" >
   <xacro:include filename="$(find sara_description)/urdf/robotiq_c2_model_macro.xacro" />
   <xacro:include filename="$(find sara_description)/urdf/arm_v1/arm.gazebo.xacro" />
   <xacro:macro name="sara_arm_v1" params="name parent">
      <!-- Link and joint to raise arm at shoulder level -->
      <link name="shoulder_raise_link">
         <visual>
            <geometry>
               <mesh filename="package://sara_description/meshes/epaule.dae" scale="0.001 0.001 0.001"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 3.1416 0"/>
         </visual>
         <collision>
            <geometry>
               <mesh filename="package://sara_description/meshes/epaule.dae" scale="0.001 0.001 0.001"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 3.1416 0"/>
         </collision>
      </link>
      <joint name="shoulder_raise_joint" type="revolute">
         <parent link="${parent}_link"/>
         <child link="shoulder_raise_link"/>
         <limit effort="1000.0" lower="-0.18" upper="1.21" velocity="0.5"/>
         <origin xyz="0.008948 -0.145 0.155" rpy="0 -1.57 0" />
         <axis xyz="0 0 1" />
      </joint>
      <!-- Link and joint to rotate the upper part of the arm at shoulder level -->
      <link name="shoulder_upper_link">
         <visual>
            <geometry>
               <mesh filename="package://sara_description/meshes/epaule.dae" scale="0.001 0.001 0.001"/>
            </geometry>
            <origin xyz="0 0 0" rpy="3.1416 0 1.5708"/>
         </visual>
         <collision>
            <geometry>
               <mesh filename="package://sara_description/meshes/epaule.dae" scale="0.001 0.001 0.001"/>
            </geometry>
            <origin xyz="0 0 0" rpy="3.1416 0 1.5708"/>
         </collision>
      </link>
      <joint name="shoulder_upper_joint" type="revolute">
         <parent link="shoulder_raise_link"/>
         <child link="shoulder_upper_link"/>
         <limit effort="1000.0" lower="-3.29" upper="0.37" velocity="0.5"/>
         <origin xyz="0 -0.085 0" rpy="-1.57 0 0" />
         <axis xyz="0 0 1" />
      </joint>
      <!-- Link and joint to rotate the lower part of the arm at shoulder level -->
      <link name="shoulder_lower_link">
         <visual>
            <geometry>
               <mesh filename="package://sara_description/meshes/bras_haut.dae" scale="0.001 0.001 0.001"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 3.1416 3.1416"/>
         </visual>
         <collision>
            <geometry>
               <mesh filename="package://sara_description/meshes/bras_haut.dae" scale="0.001 0.001 0.001"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5708 3.1416 3.1416"/>
         </collision>
      </link>
      <joint name="shoulder_lower_joint" type="revolute">
         <parent link="shoulder_upper_link"/>
         <child link="shoulder_lower_link"/>
         <limit effort="1000.0" lower="-2.14" upper="1.00" velocity="0.5"/>
         <origin xyz="-0.085 0 0" rpy="1.5708 0 1.5708" />
         <axis xyz="0 0 1" />
      </joint>
      <!-- Link and joint to raise arm at elbow level -->
      <link name="arm_raise_link">
         <visual>
            <geometry>
               <mesh filename="package://sara_description/meshes/coude.dae" scale="0.001 0.001 0.001"/>
            </geometry>
            <origin xyz="0 0 -0.0005" rpy="3.1416 0 0"/>
         </visual>
         <collision>
            <geometry>
               <mesh filename="package://sara_description/meshes/coude.dae" scale="0.001 0.001 0.001"/>
            </geometry>
            <origin xyz="0 0 -0.0005" rpy="3.1416 0 0"/>
         </collision>
      </link>
      <joint name="arm_raise_joint" type="revolute">
         <parent link="shoulder_lower_link"/>
         <child link="arm_raise_link"/>
         <limit effort="1000.0" lower="-2.20" upper="1.90" velocity="0.5"/>
         <origin xyz="0 0 -0.31" rpy="-1.5708 0 0" />
         <axis xyz="0 0 1" />
      </joint>
      <!-- Link and joint to rotate arm at elbow level -->
      <link name="arm_rot_link">
         <visual>
            <geometry>
               <mesh filename="package://sara_description/meshes/avant-bras.dae" scale="0.001 0.001 0.001"/>
            </geometry>
            <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
         </visual>
         <collision>
            <geometry>
               <mesh filename="package://sara_description/meshes/avant-bras.dae" scale="0.001 0.001 0.001"/>
            </geometry>
            <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
         </collision>
      </link>
      <joint name="arm_rot_joint" type="revolute">
         <parent link="arm_raise_link"/>
         <child link="arm_rot_link"/>
         <limit effort="1000.0" lower="-3.1416" upper="3.1416" velocity="0.5"/>
         <origin xyz="0 0.0945 0" rpy="1.5708 -1.5708 0" />
         <axis xyz="0 0 1" />
      </joint>
      <!-- Link and joint for wrist -->
      <xacro:robotiq_c2_model prefix="">
         <origin xyz="0 0 0" rpy="0 0 0" />
      </xacro:robotiq_c2_model>
      <joint name="arm_wrist_joint" type="revolute">
         <parent link="arm_rot_link"/>
         <child link="robotiq_85_base_link"/>
         <limit effort="1000.0" lower="-0.26" upper="0.26" velocity="0.5" />
         <axis xyz="0 1 0"/>
         <origin xyz="0 0 -0.10624" rpy="0 1.5708 1.5708"/>
      </joint>
      <!-- Link and joint for target (grasp) -->
      <link name="grasp_link" >
         <visual>
            <geometry>
               <sphere radius="0.01" />
            </geometry>
            <origin xyz="0 0.05 0" rpy="0 0 0" />
         </visual>
      </link>
      <joint name="grasp_joint" type="fixed" >
         <parent link="robotiq_85_base_link" />
         <child link="grasp_link" />
         <origin xyz="0.075 0 -0.012" rpy="3.1416 0 1.5708" />
      </joint>
      <xacro:sara_arm_gazebo_v1 />
   </xacro:macro>
</robot>
