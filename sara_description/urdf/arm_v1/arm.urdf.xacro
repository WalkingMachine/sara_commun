<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" >
    <xacro:include filename="$(find sara_description)/urdf/robotiq_c2_model_macro.xacro" />

    <xacro:macro name="sara_arm_v1" params="name parent *origin">
        <!-- Link and joint to raise arm at elbow level -->
        <link name="${name}_raise_link">
            <visual>
                <geometry>
                    <mesh filename="package://sara_description/meshes/coude.dae" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="0 0 -0.0005" rpy="3.1416 0 0"/>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://sara_description/meshes/coude.dae" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="0 0 -0.0005" rpy="3.1416 0 0"/>
            </collision>
        </link>
        <joint name="${name}_raise_joint" type="revolute">
            <parent link="${parent}_lower_link"/>
            <child link="${name}_raise_link"/>
            <limit effort="1000.0" lower="-2.20" upper="1.90" velocity="0.5"/>
            <origin xyz="0 0 -0.31" rpy="-1.5708 0 0" />
            <axis xyz="0 0 1" />
        </joint>
        <!-- Link and joint to rotate arm at elbow level -->
        <link name="${name}_rot_link">
            <visual>
                <geometry>
                    <mesh filename="package://sara_description/meshes/avant-bras.dae" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://sara_description/meshes/avant-bras.dae" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
            </collision>
        </link>
        <joint name="${name}_rot_joint" type="revolute">
            <parent link="${name}_raise_link"/>
            <child link="${name}_rot_link"/>
            <limit effort="1000.0" lower="-3.1416" upper="3.1416" velocity="0.5"/>
            <origin xyz="0 0.0945 0" rpy="1.5708 -1.5708 0" />
            <axis xyz="0 0 1" />
        </joint>
        <!-- Link and joint for wrist -->
        <xacro:robotiq_c2_model prefix="">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:robotiq_c2_model>
        <joint name="${name}_wrist_joint" type="revolute">
            <parent link="${name}_rot_link"/>
            <child link="robotiq_85_base_link"/>
            <limit effort="1000.0" lower="-0.26" upper="0.26" velocity="0.5" />
            <axis xyz="0 1 0"/>
            <origin xyz="0 0 -0.10624" rpy="0 1.5708 1.5708"/>
        </joint>
        <!-- Link and joint for target (grasp) -->
        <link name="grasp_link" >
            <visual>
                <geometry>
                    <sphere radius="0.01" />
                </geometry>
                <origin xyz="0 0.05 0" rpy="0 0 0" />
            </visual>
        </link>
        <joint name="grasp_joint" type="fixed" >
            <parent link="robotiq_85_base_link" />
            <child link="grasp_link" />
            <origin xyz="0.075 0 -0.012" rpy="3.1416 0 1.5708" />
        </joint>
    </xacro:macro>
</robot>
