<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" >
  <xacro:include filename="$(find sara_description)/urdf/base_v1/base.gazebo.xacro"/>
  <xacro:macro name="sara_base_v1" params="name parent">
    <xacro:sara_base_gazebo_v1 name="${name}" parent="${parent}"/>
    <link name="${name}_link">
      <visual>
         <geometry>
            <mesh filename="package://sara_description/meshes/base.STL" scale="0.001 0.001 0.001"/>
         </geometry>
         <origin xyz="0 0 0" rpy="-1.57 0 1.57"/>
      </visual>
      <collision>
         <geometry>
            <mesh filename="package://sara_description/meshes/base.STL" scale="0.001 0.001 0.001"/>
         </geometry>
         <origin xyz="0 0 0" rpy="0 0 0"/>
      </collision>
    </link>

    <joint name="${name}_spine_joint" type="fixed">
      <parent link="base_link"/>
      <child link="spine_link"/>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <axis xyz="0 0 0" />
    </joint>


  <!-- Lien entre le torse et la colonne vertebrale -->
    <link name="spine_link">
    </link>



    <!-- Lidar -->
    <link name="lidar_link">
      <visual>
        <geometry>
          <cylinder length="0.1" radius="0.03"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <material name="orange">
          <color rgba="1 0.5 0 1"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <cylinder length="0.1" radius="0.03"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.5"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      </inertial>
    </link>
    <joint name="laser_joint" type="fixed">
      <parent link="base_link"/>
      <child link="lidar_link"/>
      <origin xyz="0.34 0 0.19" rpy="0 0 0" />
    </joint>
    </xacro:macro>


    <!-- Wheel -->
    <xacro:macro name="wheel" params="prefix y_reflect x_reflect x_axis_rotation">
        <link name="${prefix}_wheel">
            <visual>
                <geometry>
                    <cylinder length="0.04" radius="0.15"/>
                </geometry>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <material name="black">
                    <color rgba="0 0 0 0"/>
                </material>
            </visual>
            <collision>
                <geometry>
                    <cylinder length="0.04" radius="0.15"/>
                </geometry>
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </collision>
        </link>

        <joint name="base_to_${prefix}_wheel" type="continuous">
            <parent link="base_link"/>
            <child link="${prefix}_wheel"/>
            <axis xyz="0 0 1"/>
            <origin xyz="${y_reflect * 0.230631} ${x_reflect * 0.22735} 0" rpy=" ${x_axis_rotation * 1.57079632679} 0 0"/>
        </joint>
     </xacro:macro>
     <xacro:wheel prefix="front_left" y_reflect="1" x_reflect="1" x_axis_rotation="-1"/>
     <xacro:wheel prefix="front_right" y_reflect="1" x_reflect="-1" x_axis_rotation="1"/>
     <xacro:wheel prefix="rear_left" y_reflect="-1" x_reflect="1" x_axis_rotation="-1"/>
     <xacro:wheel prefix="rear_right" y_reflect="-1" x_reflect="-1" x_axis_rotation="1"/>

  </robot>
