<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" >
    <xacro:macro name="sara_shoulder_v1" params="name parent *origin">
        <!-- Link and joint to raise arm at shoulder level -->
        <link name="${name}_raise_link">
            <visual>
                <geometry>
                    <mesh filename="package://sara_description/meshes/epaule.dae" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="0 0 0" rpy="0 3.1416 0"/>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://sara_description/meshes/epaule.dae" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="0 0 0" rpy="0 3.1416 0"/>
            </collision>
        </link>
        <joint name="${name}_raise_joint" type="revolute">
            <parent link="${parent}_link"/>
            <child link="${name}_raise_link"/>
            <limit effort="1000.0" lower="-0.18" upper="1.21" velocity="0.5"/>
            <origin xyz="0.008948 -0.145 0.155" rpy="0 -1.57 0" />
            <axis xyz="0 0 1" />
        </joint>
        <!-- Link and joint to rotate the upper part of the arm at shoulder level -->
        <link name="${name}_upper_link">
            <visual>
                <geometry>
                    <mesh filename="package://sara_description/meshes/epaule.dae" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="0 0 0" rpy="3.1416 0 1.5708"/>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://sara_description/meshes/epaule.dae" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="0 0 0" rpy="3.1416 0 1.5708"/>
            </collision>
        </link>
        <joint name="${name}_upper_joint" type="revolute">
            <parent link="${name}_raise_link"/>
            <child link="${name}_upper_link"/>
            <limit effort="1000.0" lower="-3.29" upper="0.37" velocity="0.5"/>
            <origin xyz="0 -0.085 0" rpy="-1.57 0 0" />
            <axis xyz="0 0 1" />
        </joint>
        <!-- Link and joint to rotate the lower part of the arm at shoulder level -->
        <link name="${name}_lower_link">
            <visual>
                <geometry>
                    <mesh filename="package://sara_description/meshes/bras_haut.dae" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="0 0 0" rpy="1.5708 3.1416 3.1416"/>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://sara_description/meshes/bras_haut.dae" scale="0.001 0.001 0.001"/>
                </geometry>
                <origin xyz="0 0 0" rpy="1.5708 3.1416 3.1416"/>
            </collision>
        </link>
        <joint name="${name}_lower_joint" type="revolute">
            <parent link="${name}_upper_link"/>
            <child link="${name}_lower_link"/>
            <limit effort="1000.0" lower="-2.14" upper="1.00" velocity="0.5"/>
            <origin xyz="-0.085 0 0" rpy="1.5708 0 1.5708" />
            <axis xyz="0 0 1" />
        </joint>
    </xacro:macro>
</robot>
