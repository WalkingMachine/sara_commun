<launch>

    <!-- Local (odom) instance -->
    <node pkg="robot_localization" type="ekf_localization_node" name="ekf_localization_local" clear_params="true">
      <param name="frequency" value="30"/>
      <param name="sensor_timeout" value="0.1"/>
      <param name="two_d_mode" value="true"/>

      <!--<param name="map_frame" value="map"/> -->
      <param name="odom_frame" value="odom"/>
      <param name="base_link_frame" value="base_link"/>
      <param name="world_frame" value="map"/>

      <param name="transform_time_offset" value="0.0"/>

      <param name="odom0" value="/wheels/odom"/>    
      <rosparam param="odom0_config">[true,   true,   false,            <!--x,y,z-->
                                      false,  false,  false,            <!--roll, pitch, yaw-->
                                      true,   true,   false,            <!--X velocity, Y velocity, Z velocity-->
                                      false,  false,  true,             <!--roll velocity, pitch velocity, yaw velocity-->
                                      false,  false,  false]</rosparam> <!--X acceleration, Y acceleration, and Z acceleration-->
                                           
      <param name="odom0_differential" value="false"/>  
      <param name="odom0_relative" value="false"/>      
      
      <param name="imu0" value="/imu/data"/>
      <rosparam param="imu0_config">[false, false,  false,             <!--x,y,z-->
                                     false, false,  true,              <!--roll, pitch, yaw-->
                                     false, false,  false,             <!--X velocity, Y velocity, Z velocity-->
                                     false, flase,  true,              <!--roll velocity, pitch velocity, yaw velocity-->
                                     true,  false,  false]</rosparam>  <!--X acceleration, Y acceleration, and Z acceleration-->

    
      <param name="imu0_differential" value="false"/>
      <param name="imu0_relative" value="false"/>

      <param name="imu0_remove_gravitational_acceleration" value="true"/>
      
 
      <param name="imu0_queue_size" value="10"/>

      <param name="debug"           value="false"/>
      <param name="debug_out_file"  value="debug_ekf_localization.txt"/>
      <param name="print_diagnostics" value="true"/>

      <remap from="/odometry/filtered" to="/odometry/filtered/local"/>
    </node>

</launch>
